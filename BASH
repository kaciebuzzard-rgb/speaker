# create config
cat > _config.yml <<'YML'
title: Kacie Wielgus | Speaker & Consultant
collections:
  excerpts:
    output: true
    permalink: /excerpts/:name/
YML

# create collection folder
mkdir -p _excerpts

# move files
git mv chair _excerpts/chair.md
git mv calling _excerpts/calling.md
git mv hallway _excerpts/hallway.md
git mv kw _excerpts/kw.md
git mv packing _excerpts/packing.md
git mv tax _excerpts/tax.md
git mv waiting _excerpts/waiting.md

# rename index
git mv index excerpts.md
git add index.html
git commit -m "Remove Jekyll layout from index"
git push
git add _layouts/default.html index.html
git commit -m "Add default layout"
git push
